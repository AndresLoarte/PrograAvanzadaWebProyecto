@model FrontEnd.API.Models.Reserva

@{
    ViewData["Title"] = "Details";
}

<section id="container">
    <section id="main-content">
        <section class="wrapper">

            <br />

            <h3><i class="fa fa-angle-right"></i> Detalle de la reserva</h3>
            <div class="row mt">
                <div class="col-md-12">
                    <a class="btn btn-xs" asp-area="" asp-controller="Reserva" asp-action="Index" role="button">
                        <i class="fa fa-arrow-circle-left  fa-2x " aria-hidden="true"></i>
                    </a>
                    <div class="content-panel">
                        <table class="table table-striped table-advance table-hover">
                            <h4><i class="fa fa-angle-right"></i>Detalles de la reserva seleccionada</h4>
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.FechaReserva)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.FechaReserva)
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Hora)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Hora)
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Estado)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Estado)
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Equipo.NombreEquipo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Equipo.NombreEquipo)
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.TipoCancha.Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.TipoCancha.Descripcion)
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.User)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.User.Correo)
                                    </td>
                                </tr>

                                <tr class="last-row">
                                    <td></td>
                                    <td>
                                        <a class=" btn btn-success btn-xs" asp-action="Edit" asp-route-id="@Model.ReservaId">Editar<i class="fa fa-pencil"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- /content-panel -->
                </div>
                <!-- /col-md-12 -->
            </div>
        </section>
    </section>

</section>
<!-- js placed at the end of the document so the pages load faster -->
<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
<script class="include" type="text/javascript" src="~/lib/jquery.dcjqaccordion.2.7.js"></script>
<script src="~/lib/jquery.scrollTo.min.js"></script>
<script src="~/lib/jquery.nicescroll.js" type="~/text/javascript"></script>
<!--common script for all pages-->
<script src="~/lib/common-scripts.js"></script>
<!--script for this page-->
<script src="~/lib/form-validation-script.js"></script>


