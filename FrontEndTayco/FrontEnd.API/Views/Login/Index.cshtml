
@model FrontEnd.API.Models.Users
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Colorlib Templates" />
    <meta name="author" content="Colorlib" />
    <meta name="keywords" content="Colorlib Templates" /> <!-- Title Page-->
    <title>@ViewData["Title"] - Login</title> <!-- Icons font CSS-->
    <link href="~/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all" />
    <link href="~/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all" />
    <!-- Font special for pages-->
    <link href="~/https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet"> <!-- Vendor CSS-->
    <link href="~/vendor/select2/select2.min.css" rel="stylesheet" media="all" />
    <link href="~/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all" /> <!-- Main CSS-->
    <link href="~/css/main.css" rel="stylesheet" media="all" />
</head>
<body>
    <div class="page-wrapper bg-gra-01 p-t-180 p-b-100 font-poppins">
        <div class="wrapper wrapper--w780 ">
            <a class=" btn btn-success btn-xs" asp-controller="Home" asp-action="Index" role="button">
                <i class="fa fa-arrow-circle-left fa-2x " aria-hidden="true">Volver</i>
            </a>
            <div class="card card-3">
                <div class="card-heading"></div> <!--arrow-circle-left-->
                <div class="card-body">
                    <h2 class="title">Login</h2>
                    <form asp-controller="Login">
                        <div class="input-group">
                            <input asp-for="UserName" class="input--style-3" placeholder="Usuario" name="name">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="input-group">
                            <input asp-for="Password" class="input--style-3" type="password" placeholder="Contraseña" name="password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div> <div class="p-t-10">
                                   <a class="login" asp-area="" asp-controller="User" asp-action="Details" role="button">Ingresar al Usuario <i class=""></i></a>
                        </div>
                        <div class="p-t-6">
                            <br />
                            <a class="login" asp-area="" asp-controller="Administrador" asp-action="Index" role="button">Ingresar Admin <i class=""></i></a>
                        </div>
                        <div class="p-t-10">
                            <br />
                            <a class="registro" asp-controller="Registro" asp-action="Create" role="button">Registro <i class=""></i></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div> <!-- Jquery JS-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/datepicker/moment.min.js"></script>
    <script src="~/vendor/datepicker/daterangepicker.js"></script>
    <!-- Main JS-->
    <script src="~/js/global.js"></script>

</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>
