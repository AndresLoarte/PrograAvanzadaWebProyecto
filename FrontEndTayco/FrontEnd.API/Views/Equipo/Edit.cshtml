@model FrontEnd.API.Models.Equipo

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">


<body>
    <section id="container">
        <section id="main-content">
            <section class="wrapper">
                <!-- /row -->
                <!-- FORM VALIDATION -->
                <div class="row mt">
                    <div class="col-lg-12">
                        <a class=" btn btn-xs" asp-action="Index" role="button">
                            <i class="fa fa-arrow-circle-left  fa-2x " aria-hidden="true"></i>
                        </a>
                    </div>
                    <div class="col-lg-12">
                        <h4><i class="fa fa-user"></i> Editar Equipo</h4>
                        <div class="form-panel">

                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="EquipoId" />
                                <div class="form-group">
                                    <label asp-for="NombreEquipo" class="control-label"></label>
                                    <input asp-for="NombreEquipo" class="form-control" />
                                    <span asp-validation-for="NombreEquipo" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Cantidad" class="control-label"></label>
                                    <input asp-for="Cantidad" class="form-control" />
                                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TipoEquipoId" class="control-label"></label>
                                    <input asp-for="TipoEquipoId" class="form-control" />
                                    <span asp-validation-for="TipoEquipoId" class="text-danger"></span>
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                                    </label>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- /row -->
            </section>
        </section>

    </section>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <!-- js placed at the end of the document so the pages load faster -->
    <script src="lib/jquery/jquery.min.js"></script>
    <script src="lib/bootstrap/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="lib/jquery.dcjqaccordion.2.7.js"></script>
    <script src="lib/jquery.scrollTo.min.js"></script>
    <script src="lib/jquery.nicescroll.js" type="text/javascript"></script>
    <!--common script for all pages-->
    <script src="lib/common-scripts.js"></script>
    <!--script for this page-->
    <script src="lib/form-validation-script.js"></script>
    <script>
        const alerta = document.querySelector('#alerta');
        alerta.addEventListener('click', () => {
            toastr.info('Se edito exitosamente', 'Equipo', {
                "progressBar": true, "positionClass": "toast-bottom-right"
            });
        })

    </script>
</body>

</html>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
