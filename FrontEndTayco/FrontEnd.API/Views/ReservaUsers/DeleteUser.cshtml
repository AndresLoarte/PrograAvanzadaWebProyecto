@model FrontEnd.API.Models.Reserva

@{
    Layout = "_LayoutUsers";
    ViewData["Title"] = "Delete";
}


    <section id="container">

        <!-- **********************************************************************************************************************************************************
        MAIN SIDEBAR MENU
        <!-- **********************************************************************************************************************************************************
        MAIN CONTENT
        *********************************************************************************************************************************************************** -->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <br />
                <div class="col-lg-12">
                    <a class=" btn btn-xs" asp-area="" asp-controller="ReservaUsers" asp-action="IndexUser" role="button">
                        <i class="fa fa-arrow-circle-left  fa-2x " aria-hidden="true"></i>
                    </a>
                </div>
                <h3><i class="fa fa-angle-right"></i> Eliminación de la reserva</h3>
                <div class="row mt">
                    <div class="col-md-12">
                        <div class="content-panel">
                            <table class="table table-striped table-advance table-hover">
                                <h4><i class=""></i>Estas seguro que quieres eliminar esta reserva?</h4>

                                <tbody>
                                    <tr>
                                        <td>
                                            @Html.DisplayNameFor(model => model.FechaReserva)
                                        <td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => model.FechaReserva)
                                        <td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayNameFor(model => model.Hora)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => model.Hora)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayNameFor(model => model.Estado)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => model.Estado)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayNameFor(model => model.Equipo.NombreEquipo)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => model.Equipo.NombreEquipo)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayNameFor(model => model.TipoCancha.Descripcion)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => model.TipoCancha.Descripcion)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayNameFor(model => model.User)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => model.User.Correo)
                                        </td>
                                    </tr>
                                    <tr class="last-row">
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                            <form asp-action="DeleteUser">
                                <input type="hidden" asp-for="ReservaId" />
                                <input type="submit" value="Eliminar" class="btn btn-danger" />
                       
                            </form>
                        </div>
                        <!-- /content-panel -->
                    </div>
                    <!-- /col-md-12 -->
                </div>
            </section>
        </section>

    </section>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="~/lib/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/lib/jquery.scrollTo.min.js"></script>
    <script src="~/lib/jquery.nicescroll.js" type="~/text/javascript"></script>
    <!--common script for all pages-->
    <script src="~/lib/common-scripts.js"></script>
    <!--script for this page-->
    <script src="~/lib/form-validation-script.js"></script>
    <script>
        const alerta = document.querySelector('#alerta');
        alerta.addEventListener('click', () => {
            toastr.error('Se elimino exitosamente', 'Reservas', {
                "progressBar": true, "positionClass": "toast-bottom-right"
            });
        })

    </script>
