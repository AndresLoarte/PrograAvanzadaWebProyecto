@model FrontEnd.API.Models.Administrador

@{
    ViewData["Title"] = "Details";
}

<section id="container">
    <section id="main-content">
        <section class="wrapper">
            <br />
            <div class="col-lg-12">
                <a class="btn btn-xs" asp-area="" asp-controller="Administrador" asp-action="Index" role="button">
                    <i class="fa fa-arrow-circle-left  fa-2x " aria-hidden="true"></i>
                </a>
            </div>
            <h3><i class="fa fa-angle-right"></i> Detalle del administrador</h3>
            <div class="row mt">
                <div class="col-md-12">
                    <div class="content-panel">
                        <table class="table table-striped table-advance table-hover">
                            <tbody>
                                <tr>
                                    <td>Nombre</td>
                                    <td> @Html.DisplayFor(model => model.NombreAdministrador)</td>
                                </tr>
                                <tr>
                                    <td>Primer Apellido</td>
                                    <td> @Html.DisplayFor(model => model.PrimerApellido)</td>
                                </tr>
                                <tr>
                                    <td>Segundo Apellido</td>
                                    <td> @Html.DisplayFor(model => model.SegundoApellido)</td>
                                </tr>
                                <tr>
                                    <td>Nombre usuario</td>
                                    <td> @Html.DisplayFor(model => model.UserName)</td>
                                </tr>

                                <tr>
                                    <td>Teléfono</td>
                                    <td>@Html.DisplayFor(model => model.Telefono)</td>
                                </tr>
                                <tr>
                                    <td>Correo</td>
                                    <td>@Html.DisplayFor(model => model.Correo)</td>
                                </tr>
                                <tr class="last-row">
                                    <td></td>
                                    <td>
                                        <a class="btn-normaly" asp-action="Edit" asp-route-id="@Model.AdministradorId" role="button">Editar <i class=""></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- /content-panel -->
                </div>
                <!-- /col-md-12 -->
            </div>
        </section>
    </section>
</section>
<script src="~/https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<!-- js placed at the end of the document so the pages load faster -->
<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
<script class="include" type="text/javascript" src="lib/jquery.dcjqaccordion.2.7.js"></script>
<script src="~/lib/jquery.scrollTo.min.js"></script>
<script src="~/lib/jquery.nicescroll.js" type="text/javascript"></script>
<!--common script for all pages-->
<script src="~/lib/common-scripts.js"></script>
<!--script for this page-->
<script src="~/lib/form-validation-script.js"></script>
