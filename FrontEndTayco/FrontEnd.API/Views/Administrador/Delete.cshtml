@model FrontEnd.API.Models.Administrador

@{
    ViewData["Title"] = "Delete";
}


<section id="container">
    <section id="main-content">
        <section class="wrapper">
            <br />
            <div class="col-lg-12">
                <a class="btn btn-xs" asp-area="" asp-controller="Administrador" asp-action="Index" role="button">
                    <i class="fa fa-arrow-circle-left  fa-2x " aria-hidden="true"></i>
                </a>
            </div>
            <h3><i class="fa fa-angle-right"></i> Eliminación de un administrador</h3>
            <div class="row mt">
                <div class="col-md-12">
                    <div class="content-panel">
                        <table class="table table-striped table-advance table-hover">
                            <h4><i class=""></i>Estas seguro que quieres eliminar este administrador?</h4>

                            <tbody>
                                <tr>
                                    <td>Nombre</td>
                                    <td>@Html.DisplayFor(model => model.NombreAdministrador)</td>
                                </tr>
                                <tr>
                                    <td>Primer Apellido</td>
                                    <td>@Html.DisplayFor(model => model.PrimerApellido)</td>
                                </tr>
                                <tr>
                                    <td>Segundo Apellido</td>
                                    <td>@Html.DisplayFor(model => model.SegundoApellido)</td>
                                </tr>
                                <tr>
                                    <td>Nombre usuario</td>
                                    <td>@Html.DisplayFor(model => model.UserName)</td>
                                </tr>

                                <tr>
                                    <td>Teléfono</td>
                                    <td>@Html.DisplayFor(model => model.Telefono)</td>
                                </tr>
                                <tr>
                                    <td>Correo</td>
                                    <td>@Html.DisplayFor(model => model.Correo)</td>
                                </tr>
                                <tr class="last-row">
                                    <td></td>
                                    <td>
                                        <form asp-action="Delete">
                                            <input type="hidden" asp-for="AdministradorId" />
                                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                                        </form>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- /content-panel -->
                </div>
                <!-- /col-md-12 -->
            </div>
        </section>
    </section>
</section>
<script src="~/https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<!-- js placed at the end of the document so the pages load faster -->
<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
<script class="include" type="text/javascript" src="lib/jquery.dcjqaccordion.2.7.js"></script>
<script src="~/lib/jquery.scrollTo.min.js"></script>
<script src="~/lib/jquery.nicescroll.js" type="text/javascript"></script>
<!--common script for all pages-->
<script src="~/lib/common-scripts.js"></script>
<!--script for this page-->
<script src="~/lib/form-validation-script.js"></script>

<script>
    const alerta = document.querySelector('#alerta');
    alerta.addEventListener('click', () => {
        toastr.error('Se elimino exitosamente', 'Mantenimiento administrador', {
            "progressBar": true, "positionClass": "toast-bottom-right"
        });
    })

</script>