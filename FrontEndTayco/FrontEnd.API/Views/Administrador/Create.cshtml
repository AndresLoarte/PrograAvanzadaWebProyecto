@model FrontEnd.API.Models.Administrador

@{
    ViewData["Title"] = "Create";
}

<section id="container">

    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <!-- /row -->
            <!-- FORM VALIDATION -->
            <div class="row mt">
                <div class="col-lg-12">
                    <a class=" btn btn-xs" asp-area="" asp-controller="Administrador" asp-action="Index" role="button">
                        <i class="fa fa-arrow-circle-left  fa-2x " aria-hidden="true"></i>
                    </a>
                </div>
                <div class="col-lg-12">
                    <h4><i class="fa fa-user"></i> Crear administrador</h4>
                    <div class="form-panel">
                        <div class="">
                            <form asp-action="Create">
                                <div class="form-group">
                                    <div class="form-group col-md-6">
                                        <label asp-for="NombreAdministrador" class="control-label"></label>
                                        <input asp-for="NombreAdministrador" class="form-control" placeholder="Nombre" type="text" />
                                        <span asp-validation-for="NombreAdministrador" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label asp-for="PrimerApellido" class="control-label"></label>
                                        <input asp-for="PrimerApellido" class="form-control" placeholder="Primer Apellido" type="text" />
                                        <span asp-validation-for="PrimerApellido" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-group col-md-6">
                                        <label asp-for="SegundoApellido" class="control-label"></label>
                                        <input asp-for="SegundoApellido" class="form-control" placeholder="Segundo Apellido" type="text" />
                                        <span asp-validation-for="SegundoApellido" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label asp-for="Telefono" class="control-label"></label>
                                        <input asp-for="Telefono" class="form-control" placeholder="Teléfono" type="number" />
                                        <span asp-validation-for="Telefono" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-group col-md-4">
                                        <label asp-for="Correo" class="control-label"></label>
                                        <input asp-for="Correo" class="form-control" placeholder="Email" type="email" />
                                        <span asp-validation-for="Correo" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label asp-for="UserName" class="control-label"></label>
                                        <input asp-for="UserName" class="form-control" placeholder="Nombre usuario" type="text" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label asp-for="Password" class="control-label"></label>
                                        <input asp-for="Password" class="form-control" placeholder="Contraseña" type="password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>

                                <input type="submit" value="Crear" class="btn btn-primary" />

                                <div class="form-group" hidden="hidden">
                                    <div class="form-group col-md-6">
                                        <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label class="form-check-label">
                                            <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                                        </label>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /row -->
        </section>
    </section>

</section>
<script src="~/https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<!-- js placed at the end of the document so the pages load faster -->
<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
<script class="include" type="text/javascript" src="lib/jquery.dcjqaccordion.2.7.js"></script>
<script src="~/lib/jquery.scrollTo.min.js"></script>
<script src="~/lib/jquery.nicescroll.js" type="text/javascript"></script>
<!--common script for all pages-->
<script src="~/lib/common-scripts.js"></script>
<!--script for this page-->
<script src="~/lib/form-validation-script.js"></script>

<script>
    const alerta = document.querySelector('#alerta');
    alerta.addEventListener('click', () => {
        toastr.info('Se registro exitosamente', 'Mantenimiento administrador', {
            "progressBar": true, "positionClass": "toast-bottom-right"
        });
    })

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
